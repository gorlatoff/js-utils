{
  "name": "@interslavic/steen-utils",
  "version": "0.0.0",
  "description": "Utilities to work with Interslavic database in Jan van Steenbergen's format",
  "main": "dist/index.js",
  "scripts": {
    "prepare": "husky install; tsc",
    "precommit": "npm run lint -- --fix && npm run docs && git add src docs",
    "prepush": "git diff-index --quiet HEAD --",
    "docs": "typedoc",
    "lint": "eslint src/**/*.ts",
    "test:unit": "eslint src/**/*.ts",
    "test": "npm run lint && npm run test:unit"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/medzuslovjansky/steen-utils.git"
  },
  "keywords": [
    "interslavic",
    "steenbergen"
  ],
  "authors": [
    "Yaroslav Serhieiev <noomorph@gmail.com>"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/medzuslovjansky/steen-utils/issues"
  },
  "homepage": "https://github.com/medzuslovjansky/steen-utils#readme",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/jest": "^26.0.22",
    "@typescript-eslint/eslint-plugin": "^4.22.0",
    "@typescript-eslint/parser": "^4.22.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.24.0",
    "eslint-config-prettier": "^8.2.0",
    "eslint-plugin-jsdoc": "^32.3.0",
    "eslint-plugin-prefer-arrow": "^1.2.3",
    "eslint-plugin-prettier": "^3.4.0",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.5",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.35",
    "typescript": "^4.2.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
